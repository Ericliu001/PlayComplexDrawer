<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.playcomplexdrawer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MyActionbarStyle"
        android:uiOptions="splitActionBarWhenNarrow" >
        <activity
            android:name="com.example.playcomplexdrawer.activity.HomeActivity"
            android:label="@string/title_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.playcomplexdrawer.activity.NaviDrawerActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
           android:name="com.example.playcomplexdrawer.activity.base.ActionTabActivity"
            android:label="@string/title_activity_action_tab" >
        </activity>
        <activity
            android:name="com.example.playcomplexdrawer.activity.PlayTabActivity"
            android:label="@string/title_activity_play_tab" >
        </activity>
    </application>

</manifest>
